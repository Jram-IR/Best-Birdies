<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BirdActivity"
    android:background="@drawable/img">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp"
            app:strokeWidth="4dp"
            app:strokeColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_height="250dp">
            <ImageView
                android:id="@+id/img_bird_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/black_browed_albatross"
                android:scaleType="centerCrop"
                android:tag="b1"
                android:onClick="birdClick"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp"
            app:strokeWidth="4dp"
            app:strokeColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_height="250dp">
            <ImageView
                android:id="@+id/img_bird_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sebian_crane"
                android:scaleType="centerCrop"
                android:tag="b2"
                android:onClick="birdClick"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp"
            app:strokeWidth="4dp"
            app:strokeColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/img_bird_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/eskimo_curlew"
                android:tag="b3"
                android:onClick="birdClick"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp"
            app:strokeWidth="4dp"
            app:strokeColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_height="250dp">
            <ImageView
                android:id="@+id/img_bird_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/piping_plover"
                android:scaleType="centerCrop"
                android:tag="b4"
                android:onClick="birdClick"
                />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp"
            app:strokeWidth="4dp"
            app:strokeColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_height="250dp">
            <ImageView
                android:id="@+id/img_bird_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/hyacinth_macaw"
                android:scaleType="centerCrop"
                android:tag="b5"
                android:onClick="birdClick"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp"
            app:strokeWidth="4dp"
            app:strokeColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_height="250dp">
            <ImageView
                android:id="@+id/img_bird_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/california_condor"
                android:scaleType="centerCrop"
                android:tag="b6"
                android:onClick="birdClick"
                />
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>



</ScrollView>